<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Publisher_Ava.App"
             xmlns:local="using:Publisher_Ava"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.Styles>
        <StyleInclude Source="Styles/DefaultStyles.axaml"/>
    </Application.Styles>
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBackground">#673385</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryHoverBackground">#5B1D80</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryActiveBackground">#4F0D76</SolidColorBrush>
    </Application.Resources>
             
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>